<?php

require_once(__DIR__.'/../../autoload.php');

use ComposerPatchManager\PatchAssistant;

if(empty($argv[1])) return;
$command = $argv[1];

switch($command) {
	case 'generate':
		$pa = new PatchAssistant();
		$pa->generatePatches();
		$pa->clean();
		break;
	default:
		die("cpm: \e[31mCommand not known: '$command'.\e[0m" .PHP_EOL);
}
